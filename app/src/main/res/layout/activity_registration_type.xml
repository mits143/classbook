<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/regClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/app_restaurant_transaction_shape"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/space_12"
            android:text="Class Registration"
            android:textColor="@color/md_white_1000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/regSchool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/app_restaurant_transaction_shape"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/space_12"
            android:text="School Registration"
            android:textColor="@color/md_white_1000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/regClass" />

        <TextView
            android:id="@+id/regStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/app_restaurant_transaction_shape"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/space_12"
            android:text="Student Registration"
            android:textColor="@color/md_white_1000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/regSchool" />

        <TextView
            android:id="@+id/regTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/app_restaurant_transaction_shape"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/space_12"
            android:text="Teacher Registration"
            android:textColor="@color/md_white_1000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/regStudent" />

        <TextView
            android:id="@+id/regExpert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/app_restaurant_transaction_shape"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/space_12"
            android:text="Expert Registration"
            android:textColor="@color/md_white_1000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/regTeacher" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>